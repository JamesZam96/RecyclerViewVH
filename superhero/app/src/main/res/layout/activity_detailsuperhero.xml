<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailsuperhero">

    <TextView
        android:id="@+id/nameSuperhero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/publisherSuperhero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PublicaciÃ³n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameSuperhero"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/realNameSuperhero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre real"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publisherSuperhero"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/photoSuperhero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/nameSuperhero"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="150dp"
        android:minWidth="115dp"
        android:minHeight="115dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>